{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "target": "es5",
    "jsx": "react"
  },
  "include": [
    "./src/assets/index.d.ts",
    "./src/index.d.ts",
    "./src/**/*"
  ]
}
